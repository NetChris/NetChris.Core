<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <LangVersion>10.0</LangVersion>
    <RootNamespace>NetChris.Core</RootNamespace>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>

    <PackageId>NetChris.Core</PackageId>

    <!-- TODO: VersionPrefix -->
    <!-- 
      If you have multiple packages in the same solution and wish to keep them all
      at the same version, consider moving this to Directory.Build.props in the
      solution root.
    -->
    <VersionPrefix>7.1</VersionPrefix>
    
    <Authors>NetChris Corp.</Authors>
    <PackageReadmeFile>Package-README.md</PackageReadmeFile>
    <PackageIcon>nuget-icon.png</PackageIcon>

    <PackageTags>netchris;dotnet-core</PackageTags>
    
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NetChris.Build.MSBuild" Version="1.0.*">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="Package-README.md">
      <PackagePath>/</PackagePath>
      <Pack>true</Pack>
    </None>
    <None Include="images/nuget-icon.png">
      <PackagePath>/</PackagePath>
      <Pack>true</Pack>
    </None>
  </ItemGroup>
</Project>
